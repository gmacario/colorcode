<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.solarma.android.colorcode.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_margin="0dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical">

        // TODO: extend to full screen width

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:onClick="chooseFunc1"
                android:text="Show value"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/button1"
                android:layout_weight="1"
                android:onClick="chooseFunc2"
                android:text="Show Color"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/button2"
                android:layout_weight="1"
                android:onClick="chooseFunc3"
                android:text="Nominal Values"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/button3"
                android:layout_weight="1"
                android:onClick="chooseFunc4"
                android:text="Wrong Color?"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/button4"
                android:layout_weight="1"
                android:onClick="chooseFunc5"
                android:text="Missing Color?"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_margin="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_func1"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC1"
                android:textSize="40sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView_func2"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC2"
                android:textSize="40sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView_func3"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC3"
                android:textSize="40sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView_func4"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC4"
                android:textSize="40sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView_func5"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC5"
                android:textSize="40sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
