<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.solarma.android.colorcode.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:onClick="chooseFunc1"
            android:text="Show Value"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button1"
            android:layout_weight="1"
            android:onClick="chooseFunc2"
            android:text="Show Color"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button2"
            android:layout_weight="1"
            android:onClick="chooseFunc3"
            android:text="Nominal Values"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_weight="1"
            android:onClick="chooseFunc4"
            android:text="Wrong Color?"
            android:textSize="10sp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@id/button4"
            android:layout_weight="1"
            android:onClick="chooseFunc5"
            android:text="Missing Color?"
            android:textSize="10sp"
            android:layout_below="@+id/button2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button5"
            android:layout_weight="1"
            android:onClick="chooseFunc6"
            android:text="About"
            android:textSize="10sp"
            android:layout_below="@+id/button3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Color Code v1.0"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20sp"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:contextClickable="true"
                android:cropToPadding="true"
                android:src="@drawable/ir_attachment_6846"
                android:padding="40dp"
                android:nestedScrollingEnabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView2"
                android:text="https://github.com/gmacario/colorcode"
                android:layout_gravity="center"
                android:clickable="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_func1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="FUNC1\nShow Value"
                android:textSize="40sp"
                android:textStyle="bold|italic"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_func2"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC2"
                android:textSize="40sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_func3"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC3"
                android:textSize="40sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_func4"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC4"
                android:textSize="40sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_func5"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="FUNC5"
                android:textSize="40sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
